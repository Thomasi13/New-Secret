<div class="center jumbotron">
	<h1>Inscription</h1>
	<br/><br/>

		<div class="row">
  		<div class="col-md-6 col-md-offset-3">
    		<%= form_for @user do |f| %>

          <div class="form-group">
            <%= f.label :nick_name %>
            <%= f.text_field :nick_name, placeholder: 'Batman', class: 'form-control' %>
          </div>

    			<div class="form-group">
      			<%= f.label :email %>
      			<%= f.email_field :email, placeholder: 'example@gmail.com', class: 'form-control' %>
      		</div>

      		<div class="form-group">
      			<%= f.label :password %>
      			<%= f.password_field :password, placeholder: '6 caracters minimum',class: 'form-control' %>
      		</div>

      		<br/>

      		<%= f.submit "Sign in", class: "btn btn-primary" %>

    		<% end %>
    		
    		<br/><br/><br/><br/><br/>
  		</div>
  	</div>
</div>